---
# created by 'IntelliJ Ansible Lint Plugin'
#
# check this website for detailed configuration options:
#    https://ansible-lint.readthedocs.io/configuring/#ansible-lint-configuration

profile: production # min, basic, moderate,safety, shared, production

enable_list:
  - empty-string-compare
  - galaxy-version-incorrect
  - loop-var-prefix
  - name[prefix]
  - no-log-password
  - no-prompting
  - no-same-owner
  # add yaml here if you want to avoid ignoring yaml checks when yamllint
  # library is missing. Normally its absence just skips using that rule.
  - yaml

# Define required Ansible's variables to satisfy syntax check
# extra_vars:
#  foo: bar
#  multiline_string_variable: |
#    line1
#    line2
#  complex_variable: ":{;\t$()"

# Limit the depth of the nested blocks:
max_block_depth: 4
